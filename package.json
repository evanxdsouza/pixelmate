{
  "name": "pixelmate",
  "version": "0.1.0",
  "private": true,
  "description": "OpenClaw/Claude CoWork-style AI agent for Chromebook",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "build:shared": "pnpm --filter @pixelmate/shared run build",
    "build:core": "pnpm --filter @pixelmate/core run build",
    "build:extension": "pnpm --filter @pixelmate/extension run build",
    "build:frontend": "pnpm --filter @pixelmate/frontend run build",
    "build:all": "pnpm --filter @pixelmate/shared run build && pnpm --filter @pixelmate/core run build && pnpm --filter @pixelmate/extension-v2 run build && pnpm --filter @pixelmate/frontend run build",
    "dev:extension": "pnpm --filter @pixelmate/extension-v2 run dev",
    "dev:frontend": "pnpm --filter @pixelmate/frontend run dev",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
